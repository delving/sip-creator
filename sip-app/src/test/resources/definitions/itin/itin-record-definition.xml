            <elem tag="geonamesId"/>
            <elem tag="place"/>
            <elem tag="long"/>
            <elem tag="lat"/>


        <!-- Date-->
        <elem tag="calendar" elems="startDate, startTime, endDate, endTime, year"/>
            <elem tag="startDate"/>
            <elem tag="startTime"/>
            <elem tag="endDate"/>
            <elem tag="endTime"/>
            <elem tag="year"/>

        <!--Link-->
        <elem tag="links" elems="link"/>
            <elem tag="link" attrs="name, type, entitytype, bundle, id, linkType, pathalias, path"/>

    </elems>




